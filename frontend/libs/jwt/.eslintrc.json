{
    "extends": ["plugin:@nrwl/nx/react", "../../../.eslintrc.json"],
    "ignorePatterns": ["!**/*"],
    "overrides": [
        // {
        //     "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
        //     "rules": {}
        // },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {
                "@typescript-eslint/no-unused-vars": [
                    "error",
                    {
                        "vars": "all",
                        "args": "after-used",
                        "ignoreRestSiblings": false
                    }
                ],
                "@typescript-eslint/no-unused-expressions": "off"
            }
        }
        // {
        //     "files": ["*.js", "*.jsx"],
        //     "rules": {}
        // }
    ]
}
